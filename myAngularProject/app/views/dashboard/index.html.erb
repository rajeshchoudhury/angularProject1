<div ng-app="shibata" ng-controller="MenuController">
	<% if notice %>
	 	<alert ng-show="alertShow" ng-animate="'alert'" type="success"><%= notice %></alert>
	<% end %>
	<% if alert %>
		<alert ng-show="alertShow" ng-animate="'alert'" type="danger"><%= alert %></alert>
	<% end %>
	<div id="wrapper">
		<header id="header">
			<h1 id="site-logo">
				<a href="" ng-click="home()">
					<img src="/images/logo.png" alt="Site Logo" />
				</a>
			</h1>	
			<a href="javascript:;" data-toggle="collapse" data-target=".top-bar-collapse" id="top-bar-toggle" class="navbar-toggle collapsed">
				<i class="fa fa-cog"></i>
			</a>

			<a href="javascript:;" data-toggle="collapse" data-target=".sidebar-collapse" id="sidebar-toggle" class="navbar-toggle collapsed">
				<i class="fa fa-reorder"></i>
			</a>
		</header> <!-- header -->

		<nav id="top-bar" class="collapse top-bar-collapse">

			<ul class="nav navbar-nav pull-left">
				<li class="">
					<a ng-click="home()">
						<i class="fa fa-home"></i> 
						Home
					</a>
				</li>
			</ul>

			<ul class="nav navbar-nav pull-right">
				<li class="dropdown">
					<a class="dropdown-toggle" data-toggle="dropdown">
						<i class="fa fa-user"></i>
			        	Mr. Shibata
			        	<span class="caret"></span>
			    	</a>

			    	<ul class="dropdown-menu" role="menu">
				        <li>
				        	<a ng-click="logout()">
				        		<i class="fa fa-sign-out"></i> 
				        		&nbsp;&nbsp;Logout
				        	</a>
				        </li>
			    	</ul>
			    </li>
			</ul>

		</nav> <!-- /#top-bar -->


		<div id="sidebar-wrapper" class="collapse sidebar-collapse">
		
			<nav id="sidebar">		
				
				<ul id="main-nav" class="open-active">			

					<li ng-class="{active: (isActive('/appointment') || isRoot())}" ng-click="toSchedule()">
						<a href="">
							<i class="fa fa-calendar"></i>
							Schedule
						</a>				
					</li>	

					<li ng-class="{active: isActive('/patient')}" ng-click="toClients()">				
						<a href="">
							<i class="fa fa-group"></i>
							Clients
						</a>				
					</li>
								

					
					<li class="dropdown">
						<a href="javascript:;">
							<i class="fa fa-money"></i>
							Finance
							<span class="caret"></span>
						</a>	

						<ul class="sub-nav">
							<li>
								<a href="">
									<i class="fa fa-usd"></i>
									Nothing Here
								</a>
							</li>
							<li>
								<a href="">
									<i class="fa fa-reorder"></i>
									Just a few
								</a>
							</li>

							<li>
								<a href="">
									<i class="fa fa-asterisk"></i>
									Dummy buttons
								</a>
							</li>
						</ul>
					</li>

				</ul>
						
			</nav> <!-- #sidebar -->

		</div> <!-- /#sidebar-wrapper -->

		<div id="content">
	    	<div ng-view></div>
	  	</div>
		
	</div> <!-- #wrapper -->
</div>
<footer id="footer">
	<ul class="nav pull-right">
		<li>
			2015 - Raoni Boaventura.
		</li>
	</ul>
</footer>
